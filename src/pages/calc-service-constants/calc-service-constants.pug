append styles
  link(rel= "stylesheet" href= "./styles.css")
append head
  title= 'Расчет остойчивости-константы'

block content
  - var breadcrumbs = [{path: "*", caption: 'Сервис расчётов'}, {path: "*", caption: 'Рыболовное “Lobster”'}, {caption: 'Расчет загрузки судна'}];
  - var steps = [{caption:'Запасы'}, {caption: 'Груз'}, {caption: "Константы", cls: 'active'}, {caption: "Статус", cls: 'inactive'}];

  include /widgets/sidebar
  main.xo-main
    +breadcrumbs(breadcrumbs, 'xo-calc__breadcrumbs')
    +link-back('*', 'xo-calc__link-back')
      | Вернуться к расчётам
    .xo-calc__header
      .xo-calc__header-title
        +arrow-left('*')
        h1.xo-text__28-700 Расчет остойчивости
      .xo-calc__header-btns
        +button('xo-btn__accent-fill')
          | Грузовой помощник
        +button('xo-btn__accent-fill')
          | Импорт данных
        +button('xo-btn__accent-fill')
          | Справочник
    .xo-calc__wrapper
      .xo-calc__estimation
        +steps(steps, 'xo-steps__constants')
        form.xo-calc__estimation-form
          .xo-calc__estimation-inputs
            div
              span.xo-text__18-700 Обледенение
              +cb-double
            div
              span.xo-text__18-700 Намокание
              +cb-double
          .xo-calc__estimation-table
            +collapse('Константы', 'xo-text__18-700', '160')
              .xo-calc__constants-row3
                span.xo-text__16-600 Наименование
                span.xo-text__16-600 Масса
              .xo-calc__constants-row3
                span.xo-text__18-400 Экипаж с багажом / Crews&Effects
                +simple_input('1', '240')
                +two-icons-2
              .xo-calc__constants-row3
                span.xo-text__18-400 Продовольствие  / Stores
                +simple_input('1', '240')
                +two-icons-2
              .xo-calc__constants-row3
                span.xo-text__18-400 Расходные цистерны / Small tanks
                +simple_input('1', '240')
                +two-icons-2
            +collapse-add('Статические нагрузки', 'xo-text__18-700', '240', 'Раскрыть координатную сетку >')
              .xo-calc__constants-row6
                span.xo-text__16-600 Наименование
                span.xo-text__16-600 Масса
                span.xo-text__16-600 X от миделя
                span.xo-text__16-600 Y от ДП
                span.xo-text__16-600 Z от ОП
              .xo-calc__constants-row6
                +simple_input("Переоборудование", '400')
                +simple_input("5.60 т", '260')
                +simple_input("3.94", '94')
                +simple_input("0", '94')
                +simple_input("6.53", '94')
                +button-cross
              .xo-calc__constants-row6
                +simple_input("Контейнер №1", '400')
                +simple_input("0", '260')
                +simple_input("4", '94')
                +simple_input("3", '94')
                +simple_input("2", '94')
                +button-cross
          .xo-calc__estimation-btn-add
            +button-add('+ Добавить объект')
        .xo-calc__estimation-btns
          +button('xo-btn__accent-fill')
